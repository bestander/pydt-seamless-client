{
  "name": "pydt-super-client",
  "version": "1.0.0",
  "description": "Desktop application for PYDT integration",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && electron .",
    "build": "tsc && electron-builder",
    "watch": "tsc -w",
    "postinstall": "npm run create-icon"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "canvas": "^3.1.0",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.pydt.superclient",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "assets/**/*"
    ]
  }
}
